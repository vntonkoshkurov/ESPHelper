<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ESPSpecialistHelper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">#303030</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="VectorTint" parent="Theme.ESPSpecialistHelper">
        <item name="android:tint">@color/night_icon</item>
        <item name="android:backgroundTint">#303030</item>
    </style>

    <style name="VectorStroke" parent="Theme.ESPSpecialistHelper">
        <item name="android:tint">@color/light_grey</item>
    </style>

    <style name="SelectorStyle" parent="Theme.ESPSpecialistHelper">
        <item name="android:tint">@color/dark_grey</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_field_layout_night</item>
    </style>

</resources>